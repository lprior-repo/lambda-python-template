[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C
ignore =
    # Line break before binary operator (black handles this)
    W503,
    # Line break after binary operator (black handles this)
    W504,
    # Multiple imports on one line
    E401,
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    terraform,
    .terraform,
    node_modules
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow longer lines in test files for readability
    test_*.py:E501
    # Allow star imports in test files
    test_*.py:F405,F403